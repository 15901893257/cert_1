<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bupt.dql.dao.SysUserMapper">

    <sql id = "baseInfo">
        id, username, password, telephone, mail, u_type as uType, status
    </sql>
    <select id="getSysUser" resultType="com.bupt.dql.web.pojo.SysUserDO">
        SELECT
        <include refid="baseInfo" />
        from sys_user
        where username = #{username}
    </select>
</mapper>